@import "/home/nekorosys/.cache/wallust/colors-waybar.css";

* { background-image: none; box-shadow: none; }
window { background-color: rgba(12, 12, 12, 0.9); }

button {
    margin: 10px;
    border-radius: 10px;
    border: none;
    border-bottom: 5px solid @color13;
    color: white;
    background-repeat: no-repeat, repeat;
    background-position: center;
    background-size: 25%, 100%;
}

button:hover {
    color: black;
    outline-style: none;
    background-color: white;
}

#lock { 
    background-image: image(url("./assets/lock.png")), 
                      linear-gradient(to bottom, alpha(black, 0), alpha(@color5, 0.5)); 
}
