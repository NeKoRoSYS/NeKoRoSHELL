#!/bin/bash

MODE_FILE="$XDG_CONFIG_HOME/.cache/nekoroshell/navbar_mode"
CURRENT_MODE=$(cat "$MODE_FILE" 2>/dev/null || echo "static")

killall -q waybar navbar-watcher navbar-hover 2>/dev/null

if [ "$CURRENT_MODE" = "dynamic" ]; then
    navbar-watcher &
elif [ "$CURRENT_MODE" = "hover" ]; then
    navbar-hover &
else
    waybar &
fi
